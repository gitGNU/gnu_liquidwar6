<int key="start-purple-y" value="50"/>

<int key="start-red-x" value="91"/>
<int key="start-red-y" value="69"/>

<int key="start-yellow-x" value="91"/>
<int key="start-yellow-y" value="88"/>





  <!-- WRAP AROUND -->
  <int key="x-polarity" value="0" /> <!-- 0 = no wrap   1 = wrap  -1 = wrap inverted  -->
  <int key="y-polarity" value="0" /> <!-- 0 = no wrap   1 = wrap  -1 = wrap inverted  -->
  
  
  <!-- GRADIENT -->
  <!-- Increase it on complex maps. Decrease it on simple maps, to make it more acurate -->
  <int key="spreads-per-round" value="1" /> <!-- Default: 3  Min: 1  Max: 12   -->
  
</lw6mapparam>
