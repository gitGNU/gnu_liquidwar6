#ifdef HAVE_CONFIG_H
#include "config.h"
#endif

#include "map.h"

#define _BOOST_BUILTIN_PERIOD 5

static int
_default_source (lw6map_meta_layer_t * boost, int width, int height)
{
  int ret = 0;
  int x, y;
  u_int8_t value = 0;

  boost->shape.w = width;
  boost->shape.h = height;
  boost->shape.d = 1;		// allways 1
  boost->data =
    (u_int8_t *) LW6SYS_CALLOC (boost->shape.w * boost->shape.h *
				sizeof (u_int8_t));

  if (boost->data)
    {
      ret = 1;
      for (y = 0; y < height; ++y)
	{
	  for (x = 0; x < width; ++x)
	    {
	      value = (!((x + y) % _BOOST_BUILTIN_PERIOD)) ? 0xFF : 0;
	      lw6map_meta_layer_set (boost, x, y, value);
	    }
	}
    }

  if (!ret)
    {
      lw6map_meta_layer_clear (boost);
    }

  return ret;
}

/**
 * lw6map_boost_builtin_whd
 *
 * @boost: the boost to init
 * @w: width
 * @h: height
 *
 * Creates a default boost. This is mostly for testing purposes, the default
 * boost is not empty, it contains regular zebras.
 *
 * Return value: none
 */
void
lw6map_boost_builtin_whd (lw6map_meta_layer_t * boost, int w, int h)
{
  lw6map_meta_layer_clear (boost);

  if (!_default_source (boost, w, h))
    {
      lw6sys_log (LW6SYS_LOG_WARNING,
		  _("unable to construct default map boost"));
      boost->shape.w = 0;
      boost->shape.h = 0;
      boost->shape.d = 0;
    }
}
