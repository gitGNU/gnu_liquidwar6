#ifdef HAVE_CONFIG_H
#include "config.h"
#endif

#include "map.h"

#define _MEDICINE_BUILTIN_NORTH_POLAR_PERCENT 20

static int
_default_source (lw6map_meta_layer_t * medicine, int width, int height)
{
  int ret = 0;
  int x, y;
  u_int8_t value = 0;
  int north_polar;

  medicine->shape.w = width;
  medicine->shape.h = height;
  medicine->shape.d = 1;	// allways 1
  medicine->data =
    (u_int8_t *) LW6SYS_CALLOC (medicine->shape.w * medicine->shape.h *
				sizeof (u_int8_t));

  north_polar = (height * _MEDICINE_BUILTIN_NORTH_POLAR_PERCENT) / 100;
  if (medicine->data)
    {
      ret = 1;
      for (y = 0; y < height; ++y)
	{
	  value = 0;
	  if (y < north_polar)
	    {
	      if (north_polar > 0)
		{
		  value = (0xFF * (north_polar - y)) / north_polar;
		}
	    }
	  for (x = 0; x < width; ++x)
	    {
	      lw6map_meta_layer_set (medicine, x, y, value);
	    }
	}
    }

  if (!ret)
    {
      lw6map_meta_layer_clear (medicine);
    }

  return ret;
}

/**
 * lw6map_medicine_builtin_whd
 *
 * @medicine: the medicine to init
 * @w: width
 * @h: height
 *
 * Creates a default medicine. This is mostly for testing purposes, the default
 * medicine is not empty, it contains a horizontal line of medicine at the top.
 * This is to match the default builtin layer which is a map of the world.
 *
 * Return value: none
 */
void
lw6map_medicine_builtin_whd (lw6map_meta_layer_t * medicine, int w, int h)
{
  lw6map_meta_layer_clear (medicine);

  if (!_default_source (medicine, w, h))
    {
      lw6sys_log (LW6SYS_LOG_WARNING,
		  _("unable to construct default map medicine"));
      medicine->shape.w = 0;
      medicine->shape.h = 0;
      medicine->shape.d = 0;
    }
}
