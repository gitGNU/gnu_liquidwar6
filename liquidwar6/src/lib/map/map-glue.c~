#ifdef HAVE_CONFIG_H
#include "config.h"
#endif

#include "map.h"

#define _GLUE_BUILTIN_EQUATOR_SIZE_PERCENT 20

static int
_default_source (lw6map_meta_layer_t * glue, int width, int height)
{
  int ret = 0;
  int x, y;
  u_int8_t value = 0;
  int tropic_north;
  int equator;
  int tropic_south;

  glue->shape.w = width;
  glue->shape.h = height;
  glue->shape.d = 1;		// allways 1
  glue->data =
    (u_int8_t *) LW6SYS_CALLOC (glue->shape.w * glue->shape.h *
				sizeof (u_int8_t));

  tropic_north = (height * (100 - _GLUE_BUILTIN_EQUATOR_SIZE_PERCENT)) / 200;
  equator = height / 2;
  tropic_south = (height * (100 + _GLUE_BUILTIN_EQUATOR_SIZE_PERCENT)) / 200;
  if (glue->data)
    {
      ret = 1;
      for (y = 0; y < height; ++y)
	{
	  if (y < equator)
	    {
	      value = 0;
	      if (y >= tropic_north && equator > tropic_north)
		{
		  value =
		    tropic_north + (0xFF * (y - tropic_north)) / (equator -
								  tropic_north);
		}
	    }
	  else
	    {
	      value = 0;
	      if (y < tropic_south && tropic_south > equator)
		{
		  value =
		    tropic_north +
		    (0xFF * (tropic_south - y)) / (tropic_south - equator);
		}
	    }
	  for (x = 0; x < width; ++x)
	    {
	      lw6map_meta_layer_set (glue, x, y, value);
	    }
	}
    }

  if (!ret)
    {
      lw6map_meta_layer_clear (glue);
    }

  return ret;
}

/**
 * lw6map_glue_builtin_whd
 *
 * @glue: the glue to init
 * @w: width
 * @h: height
 *
 * Creates a default glue. This is mostly for testing purposes, the default
 * glue is not empty, it contains a horizontal line of glue in the middle.
 * This is to match the default builtin layer which is a map of the world.
 *
 * Return value: none
 */
void
lw6map_glue_builtin_whd (lw6map_meta_layer_t * glue, int w, int h)
{
  lw6map_meta_layer_clear (glue);

  if (!_default_source (glue, w, h))
    {
      lw6sys_log (LW6SYS_LOG_WARNING,
		  _("unable to construct default map glue"));
      glue->shape.w = 0;
      glue->shape.h = 0;
      glue->shape.d = 0;
    }
}
